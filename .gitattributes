* text=auto

# Shell scripts and env files should always use LF
*.sh text eol=lf
.env text eol=lf
.env.example text eol=lf
*.properties text eol=lf

# Windows scripts should use CRLF
*.bat text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.jar binary
*.war binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
